{
  "name": "@syncturtle/ui",
  "version": "0.0.0",
  "private": true,
  "sideEffects": [
    "./styles/*.css"
  ],
  "files": [
    "dist",
    "styles"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "default": "./dist/index.mjs"
    },
    "./styles/sources.css": "./styles/sources.css"
  },
  "scripts": {
    "build": "tsup --minify",
    "dev": "tsup --watch",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "postcss": "postcss styles/globals.css -o styles/output.css --watch",
    "check:lint": "eslint . --max-warnings 94",
    "check:types": "tsc --noEmit",
    "check:format": "prettier --check \"**/*.{ts,tsx,md,json,css,scss}\"",
    "fix:lint": "eslint . --fix",
    "fix:format": "prettier --write \"**/*.{ts,tsx,md,json,css,scss}\"",
    "clean": "rm -rf .turbo && rm -rf .next && rm -rf node_modules && rm -rf dist"
  },
  "peerDependencies": {
    "@heroui/react": "^2",
    "framer-motion": "^12",
    "react": "^19",
    "react-dom": "^19"
  },
  "devDependencies": {
    "@storybook/addon-docs": "^9.1.5",
    "@storybook/addon-onboarding": "^9.1.5",
    "@storybook/addon-themes": "^9.1.5",
    "@storybook/react-vite": "^9.1.5",
    "@syncturtle/tailwind-config": "workspace:*",
    "@syncturtle/typescript-config": "workspace:*",
    "@tailwindcss/postcss": "^4.1.13",
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.6",
    "storybook": "^9.1.5",
    "tailwindcss": "^4.1.13",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2",
    "vite": "^5"
  },
  "dependencies": {
    "@syncturtle/utils": "workspace:*",
    "clsx": "^2.1.1",
    "lucide-react": "^0.544.0",
    "tailwind-merge": "^3.3.1",
    "tailwind-variants": "^3.1.1"
  }
}
